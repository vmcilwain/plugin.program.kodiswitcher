<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.buildswitcher" name="Build Switcher" version="1.1.2" provider-name="Lovell M.">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en_US">Switch between Kodi builds</summary>
        <description lang="en_US">Switch between different Kodi data directories on your device. Creates or modifies xbmc_env.properties to manage build configurations.</description>
        <disclaimer lang="en_US">Use at your own risk. Backup your configurations first.</disclaimer>
        <license>GPL-3.0-only</license>
        <news>v1.1.0 (2026-02-14)
- Option to create fresh kodi instance

        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>